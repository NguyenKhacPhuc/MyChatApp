<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_start_color">
    <RelativeLayout
        android:id="@+id/setting_header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >
        <TextView
            android:id="@+id/seting_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Settings"
            android:textSize="30sp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:fontFamily="@font/andada"/>
        <EditText
            android:id="@+id/setting_search_bar"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round"
            android:hint="Search"
            android:gravity="center"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:hint="Edit"
            android:textColorHint="@android:color/holo_blue_dark"
            style="?android:attr/borderlessButtonStyle"
            android:textSize="20sp"/>
    </RelativeLayout>
    <View
        android:id="@+id/setting_header_divider"
        android:layout_width="wrap_content"
        android:layout_height="0.1dp"
        android:background="#000000"
        android:layout_below="@id/setting_header"
        />
    <RelativeLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:layout_below="@id/setting_header_divider">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/setting_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/toanaa"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
           />
        <TextView
            android:id="@+id/setting_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/setting_avatar"
            android:text="Phuc Nguyen"
            android:textSize="30sp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/average"
            android:textColor="@android:color/black"
            />
        <TextView
            android:id="@+id/show_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/setting_name"
            android:layout_toEndOf="@+id/setting_avatar"
            android:layout_marginStart="20dp"
            android:text="+84834222439"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/chevron_right"
            android:layout_marginTop="20dp"/>
        <View
            android:id="@+id/info_divider"
            android:layout_width="wrap_content"
            android:layout_height="0.1dp"
            android:background="#000000"
            android:layout_below="@id/show_phone_number"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            />
        <TextView
            android:id="@+id/set_profile_photo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/info_divider"
            android:fontFamily="@font/andada"
            android:text="Set Profile Photo"
            android:textSize="20sp"
            android:layout_marginLeft="40dp"
            android:gravity="left"
            android:textColor="@android:color/holo_blue_dark"/>
        <View
            android:id="@+id/set_photo_profile_divider"
            android:layout_width="wrap_content"
            android:layout_height="0.1dp"
            android:background="#000000"
            android:layout_below="@id/set_profile_photo"
            android:layout_marginLeft="40dp"
            />
        <TextView
            android:id="@+id/set_user_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/set_photo_profile_divider"
            android:fontFamily="@font/andada"
            android:text="Set Username"
            android:textSize="20sp"
            android:layout_marginLeft="40dp"
            android:gravity="left"
            android:textColor="@android:color/holo_blue_dark"
            tools:ignore="RtlHardcoded" />
        <View
            android:id="@+id/set_username_divider"
            android:layout_width="wrap_content"
            android:layout_height="0.1dp"
            android:background="#000000"
            android:layout_below="@id/set_user_name"
            android:layout_marginLeft="40dp"/>
        <TextView
            android:id="@+id/set_phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/set_username_divider"
            android:fontFamily="@font/andada"
            android:text="Set Phone Number"
            android:textSize="20sp"
            android:layout_marginLeft="40dp"
            android:gravity="left"
            android:textColor="@android:color/holo_blue_dark"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/notification_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/info"
        android:background="#FFF"
        android:layout_marginTop="30dp">
        <ImageView
            android:id="@+id/notificatons_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/notification"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications and sounds"
            android:fontFamily="@font/andada"
            android:layout_toRightOf="@+id/notificatons_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"/>
        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notification_layout"
            android:background="#FFF"
            android:layout_marginTop="30dp"
            android:hint="Sign Out"
            android:textColorHint="@android:color/holo_red_light"
            android:textSize="20sp"
            android:fontFamily="@font/andada"
            style="?android:attr/borderlessButtonStyle"/>


</RelativeLayout>