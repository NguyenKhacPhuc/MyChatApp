<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:civ_border_width="0.1dp"
        app:civ_border_color="@color/colorPrimary"
        android:foregroundGravity="left"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/toanaa"/>
    <RelativeLayout
        android:id="@+id/chat_infor"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="start"
        android:layout_toEndOf="@+id/chat_avatar"
        android:paddingStart="30sp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/chat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/asul_bold"
            android:text="HoÃ ng 1C"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/chat_last_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:layout_below="@+id/chat_name"/>
        <TextView
            android:id="@+id/chat_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="15/03/2020"/>
    </RelativeLayout>
    <View
        android:id="@+id/chat_divider"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#000000"
        android:layout_below="@id/chat_infor"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="80dp" />

</RelativeLayout>