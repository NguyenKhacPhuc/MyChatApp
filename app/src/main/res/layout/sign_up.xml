<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/sign_up_labled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/andada"/>

        <TextView
            android:id="@+id/sign_up_username_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="12sp"
            android:fontFamily="@font/average"
            android:textColor="@android:color/black"
            android:text="Username"
            android:layout_below="@+id/sign_up_labled"/>
    <EditText
        android:id="@+id/input_sign_up_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/sign_up_username_lable"
        android:hint="Enter your username"
        />
        <TextView
            android:id="@+id/phoneNumber_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="12sp"
            android:fontFamily="@font/average"
            android:textColor="@android:color/black"
            android:text="Phone Number"
            android:layout_below="@+id/input_sign_up_username"/>


    <EditText
        android:id="@+id/input_sign_up_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your phone number"
        android:inputType="number"
        android:maxLength="10"
        android:layout_below="@id/phoneNumber_lable"
        android:layout_marginLeft="30dp"/>
        <TextView
            android:id="@+id/email_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="12sp"
            android:fontFamily="@font/average"
            android:textColor="@android:color/black"
            android:text="Email"
            android:layout_below="@+id/input_sign_up_phone_number"/>
        <EditText
            android:id="@+id/input_sign_up_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your email"
            android:layout_below="@id/email_lable"
            android:layout_marginLeft="30dp"/>


        <TextView
            android:id="@+id/birthday_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="12sp"
            android:fontFamily="@font/average"
            android:textColor="@android:color/black"
            android:text="Birthday"
            android:layout_below="@+id/input_sign_up_email"/>
    <DatePicker
        android:id="@+id/birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:datePickerMode="spinner"
        android:layout_below="@+id/birthday_lable"
        android:calendarViewShown="false"
        android:layout_marginLeft="30dp"/>
        <TextView
            android:id="@+id/sign_up_password_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="12sp"
            android:fontFamily="@font/average"
            android:textColor="@android:color/black"
            android:text="Password"
            android:layout_below="@+id/birthday"/>
    <EditText
        android:id="@+id/sign_up_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_up_password_lable"
        android:hint="Enter your password"
        android:layout_marginLeft="30dp"/>
        <TextView
            android:id="@+id/sign_up_reconfirm_password_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="12sp"
            android:fontFamily="@font/average"
            android:textColor="@android:color/black"
            android:text="Reconfirm password"
            android:layout_below="@+id/sign_up_password"/>
    <EditText
        android:id="@+id/sign_up_reconfirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_up_reconfirm_password_lable"
        android:hint="Reconfirm your password"
        android:layout_marginLeft="30dp"/>
        <Button
            android:id="@+id/sign_up_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Sign up"
            android:layout_below="@+id/sign_up_reconfirm_password"
            android:layout_centerHorizontal="true"
            android:background="#00838F"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>
</ScrollView>