<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <RelativeLayout
        android:id="@+id/bottom_sheet_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Contact"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/background_dark"
            android:fontFamily="@font/andada"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/cancel_add_contact_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Cancel"
            android:textColorHint="@android:color/holo_blue_bright"
            android:textSize="15sp"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:id="@+id/create_contact_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:hint="Create"
            android:textColorHint="@android:color/holo_blue_bright"
            android:textSize="15sp"
            style="?android:attr/borderlessButtonStyle"/>
    </RelativeLayout>
    <View
        android:id="@+id/add_contact_divider"
        android:layout_width="wrap_content"
        android:layout_height="0.1dp"
        android:background="#000000"
        android:layout_below="@id/bottom_sheet_header"
        android:layout_marginTop="10dp" />
    <EditText
        android:id="@+id/new_contact_firstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:textSize="20sp"
        android:fontFamily="@font/andada"
        android:layout_marginTop="20dp"
        android:layout_below="@id/add_contact_divider"/>
    <EditText
        android:id="@+id/new_contact_lastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:textSize="20sp"
        android:fontFamily="@font/andada"
        android:layout_marginTop="20dp"
        android:layout_below="@id/new_contact_firstName"/>
    <EditText
        android:id="@+id/new_contact_phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:textSize="20sp"
        android:fontFamily="@font/andada"
        android:inputType="number"
        android:layout_marginTop="20dp"
        android:maxLength="10"
        android:layout_below="@id/new_contact_lastName"/>
</RelativeLayout>